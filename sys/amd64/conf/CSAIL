device		em		# Intel PRO/1000 Gigabit Ethernet Family
device 		ix
device		cxgbe		# Chelsio T4xx 10GbE and T5xx 40GbE families

# This driver insta-panics on three servers with on-motherboard X722
# 1G interfaces, so load it explicitly on the machines that have a
# card from this family that works (and continue not to buy any more
# of them).
#device		ixl		# Intel XL710 40GbE family

